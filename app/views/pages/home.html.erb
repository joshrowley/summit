<div class="min-h-screen bg-gradient-to-b from-[#FFF5EB] to-[#E6EEF2] relative overflow-hidden">
  <!-- Navigation -->
  <nav class="absolute top-0 right-0 p-8">
    <div class="space-x-8">
      <a href="/login" class="text-gray-800 hover:text-gray-600 transition">Log in</a>
      <a href="/signup" class="text-gray-800 hover:text-gray-600 transition">Sign up</a>
    </div>
  </nav>

  <!-- Hero Section -->
  <div class="flex flex-col items-center justify-center min-h-screen relative z-10 px-4">
    <!-- Logo and Title -->
    <div class="text-center mb-6">
      <div class="mb-4">
        <svg class="w-16 h-16 mx-auto" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 3L22 18H2L12 3Z" fill="currentColor"/>
        </svg>
      </div>
      <h1 class="text-5xl font-bold text-gray-900 mb-4">Summit</h1>
      <p class="text-2xl text-gray-700 mb-8">A personal compass for life</p>
    </div>

    <!-- CTA Button -->
    <a href="/signup" class="bg-[#2B4C6F] text-white px-8 py-3 rounded-lg text-xl hover:bg-[#1E3A5F] transition duration-300 shadow-lg">
      Get Started
    </a>
  </div>

  <!-- Background Mountains -->
  <div class="absolute bottom-0 left-0 right-0 h-[60vh] pointer-events-none">
    <!-- Mountains SVG will be added in a separate file -->
    <%= render "shared/mountains" %>
  </div>
</div> 